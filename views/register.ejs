<%- include("partials/header") %>

<div class="container">.
    <h1>Pagina De Inregistrare</h1>
    <div class="formContainer">
        <form action="/admin" method="POST" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="firstName">Prenume</label>
                <input type="text" class="form-control" name="firstName" id="firstName" required>
                <div class="invalid-feedback">
                    Acest camp nu poate fi lasat gol!
                </div>
            </div>
            <div class="form-group">
                <label for="password">Nume</label>
                <input type="text" class="form-control" name="lastName" id="lastName" required>
                <div class="invalid-feedback">
                    Acest camp nu poate fi lasat gol!
                </div>
            </div>
            <div class="form-group">
                <label for="email">Adresa de email</label>
                <input pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" type="email" class="form-control" name="email" id="email" required>
                <div class="invalid-feedback">
                    Introdu o adresa de email valida!
                </div>
            </div>
            <div class="form-group">
                <label for="password">Parola</label>
                <input pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$" type="password" class="form-control" name="password" id="password" required>
                <div class="invalid-feedback">
                    Parola trebuie sa fie de cel putin 8 caractere! Ea trebuie sa contina cel putin o cifra si o litera!
                </div>
            </div>
                <p id="errorText" class="error"><%= error %></p>
                <button class="btn btn-lg btn-primary submit-button">Inregistrare</button>
        </form>
        <a href="/login" >Ai deja un cont? Click aici!</a>
    </div>
</div>

<script src="/js/formValidator.js"></script>
<script src="/js/errorManager.js"></script>


<%- include("partials/footer") %>